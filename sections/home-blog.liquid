<!-- Home Articles Destacados -->
<div class="flex flex-col justify-center items-center my-3 px-8 md:px-0 mb-10">
  <div class="w-full container mx-auto my-4">
    {% if section.settings.title != blank %}
      <h2 class="text-[33px] md:text-[40px] text-black dark:text-[#feffee] font-medium mb-3 tracking-[-1.3px]">
        {{ section.settings.title }}
      </h2>
    {% endif %}


    <div class="grid grid-cols-1 md:grid-cols-8 gap-8">

      <a href="/pages/roxyfest" class="w-full md:col-span-3 roxycounter min-h-[420px] w-full flex flex-col justify-center items-center text-center py-6 px-4 rounded-xl">
        <h2 class="weird-font text-[70px] leading-[50px] font-bold mb-2">roxy<span class="opacity-50">fest</span>
        </h2>
        <div class="bg-white/10 p-3 shadow-xl rounded-xl border border-white  px-16 mt-8 py-2 rounded-full mt-3 min-w-[100px]">
          <h2 class="text-white font-[500]">edicion 2025</h2>
        </div>
        <div class="text-3xl mb-2 mt-3 flex jusitfy-center items-center">
          <p class="font-[200] text-[15px] text-[#feffee]">dedicado al sol üåû</p>
        </div>
      </a>

      <div class="md:col-span-5">
        {% if section.blocks.size > 0 %}
          <div class="grid grid-rows-2 grid-flow-col auto-cols-[280px] overflow-x-scroll md:grid-rows-1 md:grid-cols-3 md:grid-flow-row md:auto-cols-auto gap-4 pb-4 md:pb-0">
            {% for block in section.blocks limit: 6 %}
              {% assign article = articles[block.settings.article] %}
              {% if article %}
                <a href="{{ article.url }}" class="border border-black dark:border-transparent rounded-xl dark:bg-white/10 hover:bg-black/5 dark:hover:bg-white/15 transition-all">
                  <div class="flex flex-row gap-3 p-3">
                    {% if article.image %}
                      <img
                        width="80"
                        height="80"
                        src="{{ article.image | img_url: '200x' }}"
                        alt="{{ article.title }}"
                        class="w-20 h-20 object-cover rounded-lg flex-shrink-0">
                    {% endif %}

                    <div class="flex flex-col justify-center flex-1 min-w-0">
                      <h3 class="text-2xl font-semibold text-black dark:text-[#feffee] line-clamp-2 mb-1">{{ article.title }}</h3>
                      <p class="text-lg text-black dark:text-[#feffee] opacity-70">
                        por
                        {% if article.metafields.custom.autor != blank %}
                          {{ article.metafields.custom.autor }}
                        {% else %}
                          {{ article.author }}{% endif %}
                      </p>
                    </div>
                  </div>
                </a>
              {% endif %}
            {% endfor %}
          </div>

          {% if section.settings.view_all_url != blank %}
            <div class="w-full mt-6">
              <a href="{{ section.settings.view_all_url }}" class="w-full block py-3 text-center border-2 border-black dark:border-[#feffee] text-black dark:text-[#feffee] rounded-xl hover:bg-black hover:text-[#feffee] dark:hover:bg-[#feffee] dark:hover:text-black transition-all duration-200 font-medium">
                {{ section.settings.view_all_text }}
              </a>
            </div>
          {% endif %}
        {% else %}
          <p class="text-black dark:text-[#feffee] mt-4">No has agregado art√≠culos destacados todav√≠a.</p>
        {% endif %}
      </div>

    </div>


  </div>
</div>

{% schema %}
  {
    "name": "Home Articles",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "T√≠tulo de la secci√≥n",
        "default": "destacados"
      }, {
        "type": "url",
        "id": "view_all_url",
        "label": "URL bot√≥n Ver todos"
      }, {
        "type": "text",
        "id": "view_all_text",
        "label": "Texto bot√≥n Ver todos",
        "default": "ver todos"
      }
    ],
    "blocks": [
      {
        "type": "article",
        "name": "Art√≠culo",
        "settings": [
          {
            "type": "article",
            "id": "article",
            "label": "Selecciona un art√≠culo"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Home Articles",
        "category": "Custom"
      }
    ]
  }
{% endschema %}