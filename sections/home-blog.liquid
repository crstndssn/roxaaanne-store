<!-- Home Articles Destacados -->
<div class="bg-black flex flex-col justify-center items-center mt-3 md:px-0">
  <div class="w-full container mx-auto mb-8 my-4">

    {% if section.settings.title != blank %}
      <h2 class="text-4xl text-white font-medium mb-6">
        {{ section.settings.title }}
      </h2>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 mt-7 mb-10 gap-7 md:gap-4">
        {% for block in section.blocks %}
          {% assign article = articles[block.settings.article] %}
          {% if article %}
            <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl shadow-md overflow-hidden flex flex-col">

              {% if article.image %}
                <img
                  src="{{ article.image | img_url: '600x' }}"
                  alt="{{ article.title }}"
                  class="w-full h-48 object-cover">
              {% endif %}

              <div class="p-4 flex flex-col flex-1">
                <h3 class="text-lg font-semibold text-white mb-2">{{ article.title }}</h3>
                <p class="text-sm text-gray-300 opacity-80 mb-4">
                  por
                  {% if article.metafields.custom.autor != blank %}
                    {{ article.metafields.custom.autor }}
                  {% else %}
                    {{ article.author }}
                  {% endif %}
                </p>
                <div class="mt-auto">
                  <a href="{{ article.url }}" class="text-blue-300 underline hover:text-blue-200 transition-colors">
                    Leer más
                  </a>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <p class="text-gray-400 mt-4">No has agregado artículos destacados todavía.</p>
    {% endif %}

  </div>
</div>

{% schema %}
  {
    "name": "Home Articles",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Título de la sección",
        "default": "Artículos destacados"
      }
    ],
    "blocks": [
      {
        "type": "article",
        "name": "Artículo",
        "settings": [
          {
            "type": "article",
            "id": "article",
            "label": "Selecciona un artículo"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Home Articles",
        "category": "Custom"
      }
    ]
  }
{% endschema %}