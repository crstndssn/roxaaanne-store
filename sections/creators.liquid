<div class="bg-black bg-black flex flex-col justify-center items-center">
  <div class="container mx-auto w-full flex justify-center items-center flex-col md:grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-5 mt-7">
    <a
    class="border-[0.1px] hover:border border-white flex flex-col justify-center items-center py-12 rounded-xl min-h-[255px]"
    href="{{ block.settings.creator__link }}"
    class="text-white">
    <div class="w-[50px] h-[50px] rounded-full overflow-hidden mb-5">
      <img
        class="w-full h-full object-cover"
        src="https://cdn.shopify.com/s/files/1/0700/8623/0213/files/add-circle-repo.svg?v=1747532052"
        alt="">
    </div>
    <div class="mt-3">
      <p>crear mi perfil</p>
    </div>
  </a>
    {% for block in section.blocks %}
      <a
        class="border-[0.1px] hover:border border-white flex flex-col justify-center items-center py-12 rounded-xl"
        href="{{ block.settings.creator__link }}"
        class="text-white">
        <div class="w-[150px] h-[150px] rounded-full overflow-hidden mb-5">
          <img
            class="w-full h-full object-cover"
            src="{{ block.settings.creator__image | image_url: width: master }}"
            alt="">
        </div>
        <div class="mt-3">
          {{ block.settings.creator__name }}
        </div>

      </a>
    {% endfor %}


  </div>

</div>

<style>
  .home__title strong {
    font-weight: 500;
  }

</style>

{% schema %}
  {
    "name": "Creators",
    "settings": [
      {
        "type": "richtext",
        "id": "title",
        "label": "TÃ­tulo"
      }, {
        "type": "richtext",
        "id": "content",
        "label": "Contenido"
      }
    ],
    "blocks": [
      {
        "type": "creator",
        "name": "Creator",
        "settings": [
          {
            "type": "image_picker",
            "id": "creator__image",
            "label": "Photo"
          }, {
            "type": "text",
            "id": "creator__name",
            "label": "Texto",
            "default": "Name"
          }, {
            "type": "url",
            "id": "creator__link",
            "label": "Link"
          }
        ]
      }

    ]
  }
{% endschema %}