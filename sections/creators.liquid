<div class="flex flex-col justify-center text-left items-center px-8 md:px-0">

  <div class="container mx-auto flex flex-col items-center text-center mb-7 border-2 border-black dark:border-[#feffee] rounded-xl p-4">
    <h2 class="text-black dark:text-[#feffee] text-7xl font-medium mb-0 md:mb-1 my-4 md:mt-[30px] tracking-[-1.3px]">creadorxs</h2>
    <div class="md:w-[50%]">
      <p class="text-black dark:text-[#feffee] my-2 text-[17px] md:text-3xl font-[400] leading-tight mb-10 md:mb-14">Descubre cada universo de los creadorxs que hacen posible este espacio; también puedes ser uno de nosotrxs, crea tu perfil.</p>
    </div>
  </div>

  <div class="container mx-auto w-full grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-5">
    <a
      class="w-full px-4 md:px-0 bg-[#feffee] dark:bg-[#1c1c1c] border-2 hover:border-black border-[#c9c9c9] dark:border-[#1c1c1c] flex flex-col justify-center items-center py-12 mt-1 rounded-xl min-h-[255px]"
      href="/pages/crear-mi-perfil"
      class="text-white">
      <div class="w-[50px] h-[50px] rounded-full overflow-hidden mb-5">
        <img
          class="w-full h-full object-cover"
          src="https://cdn.shopify.com/s/files/1/0700/8623/0213/files/add-circle-repo.svg?v=1747532052"
          alt="">
      </div>
      <div class="mt-3">
        <p class="text-black dark:text-[#feffee]">crear mi perfil</p>
      </div>
    </a>
    {% for block in section.blocks %}
      <a
        class="bg-[#feffee] dark:bg-[#1c1c1c] border-2 hover:border-black border-[#c9c9c9] dark:border-[#1c1c1c] flex flex-col justify-center items-center py-12 mt-1 rounded-xl"
        href="{{ block.settings.creator__link }}"
        class="text-white">
        <div class="w-[123px] h-[123px] md:w-[150px] md:h-[150px] rounded-full overflow-hidden mb-5">
          <img
            class="w-full h-full object-cover"
            src="{{ block.settings.creator__image | image_url: width: master }}"
            alt="">
        </div>
        <div class="text-black dark:text-[#feffee] text-[16px]  md:text-[18px] tracking-[-0.3px] mt-3 font-[500]">
          {{ block.settings.creator__name }}
        </div>
      </a>
    {% endfor %}
  </div>
</div>

<style>
  .home__title strong {
    font-weight: 500;
  }

</style>

{% schema %}
  {
    "name": "Creators",
    "settings": [
      {
        "type": "richtext",
        "id": "title",
        "label": "Título"
      }, {
        "type": "richtext",
        "id": "content",
        "label": "Contenido"
      }
    ],
    "blocks": [
      {
        "type": "creator",
        "name": "Creator",
        "settings": [
          {
            "type": "image_picker",
            "id": "creator__image",
            "label": "Photo"
          }, {
            "type": "text",
            "id": "creator__name",
            "label": "Texto",
            "default": "Name"
          }, {
            "type": "url",
            "id": "creator__link",
            "label": "Link"
          }
        ]
      }, {
        "type": "new_creator",
        "name": "New Creations",
        "settings": [
          {
            "type": "image_picker",
            "id": "mini_creator__image",
            "label": "Mini Foto"
          }, {
            "type": "text",
            "id": "mini_creator__title",
            "label": "Título (ej. Nueva creadora)",
            "default": "Nueva creadora"
          }, {
            "type": "text",
            "id": "mini_creator__subtitle",
            "label": "Subtítulo (ej. por roxaaanne)",
            "default": "por roxaaanne"
          }
        ]
      }

    ]
  }
{% endschema %}