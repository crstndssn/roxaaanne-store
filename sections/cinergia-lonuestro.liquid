<div class="container mx-auto px-7 md:px-0 mt-10">
  <h2 class="text-[27px] md:text-[40px] text-black dark:text-[#feffee] font-medium mb-2 tracking-tight mt-8">lo nuestro</h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 gap-5 md:gap-6">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'image_link' %}
          <div class="text-center" {{ block.shopify_attributes }}>
            {% if block.settings.link != blank %}
              <a
                href="{{ block.settings.link }}"
                class="block group"
                rel="noopener noreferrer">
            {% endif %}
            {% if block.settings.image %}
              <div class="h-[250px] rounded-xl overflow-hidden">
                <img
                  src="{{ block.settings.image | image_url: width: 1300 }}"
                  alt="{{ block.settings.name | escape }}"
                  style="width: 100%; height: 100%; object-fit: cover; object-position: center;"
                  loading="lazy">
              </div>
            {% endif %}
            {% if block.settings.link != blank %}
              </a>
            {% endif %}
          </div>
        {% when 'content' %}
          <div class="p-6 border-2 border-[#c9c9c9] dark:border-[#5a5a5a] rounded-xl bg-[#feffee] dark:bg-[#1c1c1c]" {{ block.shopify_attributes }}>
            {% if block.settings.title != blank %}
              <h3 class="text-2xl font-semibold text-black dark:text-[#feffee] mb-3">{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.content != blank %}
              <div class="text-[17px] text-black dark:text-[#feffee]">
                {{ block.settings.content }}
              </div>
            {% endif %}
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Cinergia Lo Nuestro",
    "settings": [],
    "blocks": [
      {
        "type": "image_link",
        "name": "Imagen con enlace",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Imagen"
          }, {
            "type": "url",
            "id": "link",
            "label": "Enlace"
          }, {
            "type": "text",
            "id": "name",
            "label": "Nombre"
          }
        ]
      }, {
        "type": "content",
        "name": "Contenido",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "TÃ­tulo"
          }, {
            "type": "richtext",
            "id": "content",
            "label": "Contenido"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Cinergia Lo Nuestro"
      }
    ]
  }
{% endschema %}