{{ 'section-main-product.css' | asset_url | stylesheet_tag }}

<div class="container mx-auto px-8 pb-16">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">

    <!-- Galer√≠a de im√°genes del producto -->
    <div class="product-gallery">
      {% if product.media.size > 0 %}
        <!-- Imagen principal -->
        <div class="main-image mb-4">
          <div class="relative aspect-square bg-gray-900 rounded-2xl overflow-hidden">
            <img
              id="mainProductImage"
              src="{{ product.featured_image | image_url: width: 800 }}"
              alt="{{ product.title | escape }}"
              class="w-full h-full object-cover"
              width="800"
              height="800">
          </div>
        </div>

        <!-- Miniaturas -->
        {% if product.media.size > 1 %}
          <div class="thumbnails grid grid-cols-4 gap-3">
            {% for media in product.media limit: 4 %}
              <button
                type="button"
                class="thumbnail-btn relative aspect-square bg-gray-900 rounded-lg overflow-hidden border-2 border-black-800 hover:border-black dark:hover:border-[#feffee] transition-all {% if forloop.first %}border-black dark:border-[#feffee]{% endif %}"
                onclick="changeMainImage('{{ media | image_url: width: 800 }}', this)">
                <img
                  src="{{ media | image_url: width: 200 }}"
                  alt="{{ product.title | escape }}"
                  class="w-full h-full object-cover"
                  loading="lazy">
              </button>
            {% endfor %}
          </div>
        {% endif %}
      {% else %}
        <div class="aspect-square bg-gray-900 rounded-2xl flex items-center justify-center">
          <span class="text-black dark:text-[#feffee] text-lg">Sin imagen</span>
        </div>
      {% endif %}
    </div>

    <!-- Informaci√≥n del producto -->
    <div class="product-info">
      <div class="mb-8">
        <h1 class="text-4xl md:text-5xl font-[400] text-black dark:text-[#feffee] mb-4">
          {{ product.title }}
        </h1>

        <!-- Precio -->
        <div class="flex items-center gap-4 mb-3">
          {% if product.compare_at_price > product.price %}
            <span class="text-3xl font-bold text-red-500">
              {{ product.price | money }}
            </span>
            <span class="text-2xl text-gray-400 line-through">
              {{ product.compare_at_price | money }}
            </span>
            <span class="bg-red-500 text-black dark:text-[#feffee] px-3 py-1 rounded-full text-sm font-semibold">
              -{{ product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price }}%
            </span>
          {% else %}
            <span class="text-3xl font-bold text-black dark:text-[#feffee]">
              {{ product.price | money }}
            </span>
          {% endif %}
        </div>

        <!-- Descripci√≥n -->
        {% if product.description != blank %}
          <div class="text-black dark:text-[#feffee] text-lg leading-relaxed mb-8">
            {{ product.description }}
          </div>
        {% endif %}
      </div>

      <!-- Formulario de producto -->
      {% form 'product'
        , product
        , id: 'product-form'
        , novalidate: 'novalidate' %}
        <input
          type="hidden"
          name="id"
          value="{{ product.selected_or_first_available_variant.id }}">

        <!-- Variantes (Tallas, Colores, etc) -->
        {% unless product.has_only_default_variant %}
          <div class="variants-wrapper mb-6">
            {% for option in product.options_with_values %}
              <div class="variant-selector mb-6">
                <label class="block text-black dark:text-[#feffee] text-lg font-medium mb-3">
                  {{ option.name }}
                </label>

                {% if option.name == 'Color' or option.name == 'color' %}
                  <!-- Selector de colores -->
                  <div class="flex gap-3 flex-wrap">
                    {% for value in option.values %}
                      <label class="relative cursor-pointer">
                        <input
                          type="radio"
                          name="option-{{ option.position }}"
                          value="{{ value | escape }}"
                          class="sr-only peer"
                          {% if option.selected_value == value %}
                          checked{% endif %}>
                        <div class="w-12 h-12 rounded-full border-2 border-gray-600 peer-checked:border-white transition-all flex items-center justify-center" style="background-color: {{ value | downcase | replace: ' ', '' }}">
                          <svg
                            class="w-6 h-6 text-black dark:text-[#feffee] hidden peer-checked:block"
                            fill="currentColor"
                            viewBox="0 0 20 20">
                            <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" />
                          </svg>
                        </div>
                        <span class="sr-only">{{ value }}</span>
                      </label>
                    {% endfor %}
                  </div>
                {% elsif option.name == 'Talla' or option.name == 'Size' or option.name == 'size' or option.name == 'talla' %}
                  <!-- Selector de tallas -->
                  <div class="flex gap-3 flex-wrap">
                    {% for value in option.values %}
                      <label class="relative cursor-pointer">
                        <input
                          type="radio"
                          name="option-{{ option.position }}"
                          value="{{ value | escape }}"
                          class="sr-only peer"
                          {% if option.selected_value == value %}
                          checked{% endif %}>
                        <div class="px-6 py-3 border-2 border-gray-600 rounded-lg peer-checked:border-white peer-checked:bg-white peer-checked:text-black text-black dark:text-[#feffee] font-medium transition-all hover:border-gray-400">
                          {{ value }}
                        </div>
                      </label>
                    {% endfor %}
                  </div>
                {% else %}
                  <!-- Selector dropdown para otras opciones -->
                  <select name="option-{{ option.position }}" class="w-full px-4 py-3 bg-gray-900 border border-gray-600 rounded-lg text-black dark:text-[#feffee] focus:border-white focus:outline-none">
                    {% for value in option.values %}
                      <option
                        value="{{ value | escape }}"
                        {% if option.selected_value == value %}
                        selected{% endif %}>
                        {{ value }}
                      </option>
                    {% endfor %}
                  </select>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        {% endunless %}

        <!-- Cantidad -->
        <div class="quantity-selector mb-6">
          <label class="block text-black dark:text-[#feffee] text-[15px] font-medium mb-3">
            Cantidad
          </label>
          <div class="flex items-center gap-4">
            <button
              type="button"
              onclick="changeQuantity(-1)"
              class="w-14 h-14 bg-[#feffee] dark:bg-black border-2 border-black dark:border-[#feffee] rounded-lg text-black hover:text-[#feffee] hover:dark:text-black dark:text-[#feffee] hover:bg-black hover:dark:bg-[#feffee] transition-colors">
              -
            </button>
            <input
              type="number"
              id="quantity"
              name="quantity"
              value="1"
              min="1"
              class="w-24 h-14 text-center bg-[#feffee] dark:bg-black border-2 border-black dark:border-[#feffee] rounded-lg text-black dark:text-[#feffee] text-[15px] font-medium focus:outline-none focus:border-white">
            <button
              type="button"
              onclick="changeQuantity(1)"
              class="w-14 h-14 bg-[#feffee] dark:bg-black border-2 border-black dark:border-[#feffee] rounded-lg text-black hover:text-[#feffee] hover:dark:text-black dark:text-[#feffee] hover:bg-black hover:dark:bg-[#feffee] transition-colors">
              +
            </button>
          </div>
        </div>

        <!-- Bot√≥n a√±adir al carrito -->
        <button
          type="submit"
          name="add"
          class="w-full bg-black text-[#feffee] py-4 px-8 rounded-xl text-[17px] font-[500] hover:bg-[#feffee] hover:text-black border-2 border-black dark:border-[#feffee] transition-colors disabled:bg-gray-600 disabled:text-gray-400 disabled:cursor-not-allowed mb-4"
          {% unless product.available %}
          disabled{% endunless %}>
          {% if product.available %}
            A√±adir al carrito
          {% else %}
            Agotado
          {% endif %}
        </button>

        <!-- Disponibilidad -->
        <div class="flex items-center gap-2 text-sm">
          {% if product.available %}
            <svg
              class="w-5 h-5 text-green-500"
              fill="currentColor"
              viewBox="0 0 20 20">
              <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" />
            </svg>
            <span class="text-green-500 text-black dark:text-[#feffee]">En stock</span>
          {% else %}
            <svg
              class="w-5 h-5 text-red-500"
              fill="currentColor"
              viewBox="0 0 20 20">
              <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" />
            </svg>
            <span class="text-red-500 text-black dark:text-[#feffee]">Agotado</span>
          {% endif %}
        </div>
      {% endform %}

      <!-- Informaci√≥n adicional -->
      <div class="mt-12 pt-8">
        <details class="mb-4">
          <summary class="text-black dark:text-[#feffee] text-[15px] font-medium cursor-pointer hover:text-black hover:dark:text-gray-300 transition-colors py-3 border border-gray-700 rounded-lg px-4">
            Gu√≠a de tallas
          </summary>
          <div class="pt-4 text-black dark:text-[#feffee]">
            <table class="w-full text-left">
              <thead>
                <tr class="border-b border-gray-700">
                  <th class="py-2">Talla</th>
                  <th class="py-2">Pecho (cm)</th>
                  <th class="py-2">Largo (cm)</th>
                </tr>
              </thead>
              <tbody>
                <tr class="border-b border-gray-800">
                  <td class="py-2">S</td>
                  <td class="py-2">46-48</td>
                  <td class="py-2">68-70</td>
                </tr>
                <tr class="border-b border-gray-800">
                  <td class="py-2">M</td>
                  <td class="py-2">50-52</td>
                  <td class="py-2">70-72</td>
                </tr>
                <tr class="border-b border-gray-800">
                  <td class="py-2">L</td>
                  <td class="py-2">54-56</td>
                  <td class="py-2">72-74</td>
                </tr>
                <tr>
                  <td class="py-2">XL</td>
                  <td class="py-2">58-60</td>
                  <td class="py-2">74-76</td>
                </tr>
              </tbody>
            </table>
          </div>
        </details>

        <details class="mb-4">
          <summary class="text-black dark:text-[#feffee] text-[15px] font-medium cursor-pointer hover:text-black hover:dark:text-gray-300 transition-colors py-3 border border-gray-700 rounded-lg px-4">
            Materiales y cuidados
          </summary>
          <div class="pt-4 text-black dark:text-[#feffee]">
            <ul class="list-disc list-inside space-y-2">
              <li>100% Algod√≥n org√°nico</li>
              <li>Lavar a m√°quina en agua fr√≠a</li>
              <li>No usar blanqueador</li>
              <li>Secar a baja temperatura</li>
              <li>Planchar a temperatura media si es necesario</li>
            </ul>
          </div>
        </details>

        <details>
          <summary class="text-black dark:text-[#feffee] text-[15px] font-medium cursor-pointer hover:text-black hover:dark:text-gray-300 transition-colors py-3 border border-gray-700 rounded-lg px-4">
            Env√≠os y devoluciones
          </summary>
          <div class="pt-4 text-black dark:text-[#feffee]">
            <p class="mb-2">üì¶ Env√≠o gratis en compras superiores a $50.000</p>
            <p class="mb-2">üöö Entrega en 3-5 d√≠as h√°biles</p>
            <p>‚Ü©Ô∏è Devoluciones gratuitas dentro de 30 d√≠as</p>
          </div>
        </details>
      </div>
    </div>
  </div>
</div>

<script>
  // Cambiar imagen principal
  function changeMainImage(imageUrl, button) {
    document.getElementById('mainProductImage').src = imageUrl;
    
    // Actualizar bordes de miniaturas
    document.querySelectorAll('.thumbnail-btn').forEach(btn => {
      btn.classList.remove('border-black');
      btn.classList.add('border-transparent');
    });
    button.classList.add('border-black');
    button.classList.remove('border-transparent');
  }

  // Cambiar cantidad
  function changeQuantity(change) {
    const input = document.getElementById('quantity');
    const currentValue = parseInt(input.value) || 1;
    const newValue = Math.max(1, currentValue + change);
    input.value = newValue;
  }

  // Actualizar variante seleccionada cuando cambian las opciones
  document.querySelectorAll('input[type="radio"], select').forEach(input => {
