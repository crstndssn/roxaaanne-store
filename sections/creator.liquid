<div class="container mx-auto px-10 md:px-0">
  <div class="flex justify-center items-center flex-col gap-12 md:flex-col">
    <div class="w-full flex justify-center md:w-1/3">
      <div class="w-[170px] h-[170px] rounded-full overflow-hidden md:mt-12">
        {% if section.settings.image %}
          <img
            class="w-full h-full object-cover"
            src="{{ section.settings.image | image_url }}"
            alt="{{ section.settings.name | escape }}">
        {% endif %}
      </div>
    </div>
    <div class="mt-2 text-center flex flex-col justifu-center items-center">
      <h1 class="text-black dark:text-[#feffee] text-[40px] md:text-[40px] tracking-[-1px] md:tracking-[-2px] font-[400]">{{ section.settings.name }}</h1>
      <div class="w-full md:w-2/3 text-[17px] leading-[20px] md:text-3xl font-[300] mt-1 text-black dark:text-[#feffee]">{{ section.settings.description }}</div>
    </div>
  </div>
</div>

<div class="container mx-auto mt-12 grid grid-cols-1 md:grid-cols-2 px-8 md:px-0">
  {% for block in section.blocks %}
    <a href="{{ block.settings.link }}" class="border-2 border-black dark:border-[#feffee] border dark:border-opacity-50 rounded-lg text-black dark:text-[#feffee] text-[23px] tracking-[-0.3px] font-[400] hover:font-[400] hover:bg-black hover:dark:bg-[#080808] hover:text-[#feffee] hover:border-2 min-h-[200px] flex justify-center items-center">
      {{ block.settings.title }}
    </a>
  {% endfor %}
</div>


{% schema %}
  {
    "name": "Custom Blocks",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Imagen"
      }, {
        "type": "text",
        "id": "name",
        "label": "Nombre",
        "default": "Nombre de ejemplo"
      }, {
        "type": "richtext",
        "id": "description",
        "label": "Descripción"
      }
    ],
    "blocks": [
      {
        "type": "products",
        "name": "Productos",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Productos"
          }, {
            "type": "richtext",
            "id": "description",
            "label": "Description"
          }, {
            "type": "collection",
            "id": "content",
            "label": "Lista de productos"
          }
        ]
      }, {
        "type": "blog",
        "name": "Blog",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Título",
            "default": "Imágenes / Películas / Artículos"
          }, {
            "type": "richtext",
            "id": "description",
            "label": "Description"
          }, {
            "type": "blog",
            "id": "content",
            "label": "Seleccionar Blog"
          }
        ]
      }, {
        "type": "section",
        "name": "Section",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Titulo"
          }, {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Sección de Bloques",
        "category": "Custom",
        "blocks": [
          {
            "type": "products"
          }, {
            "type": "blog"
          }
        ]
      }
    ]
  }
{% endschema %}