<div class="container mx-auto px-8 md:px-0">

  <div class="flex justify-center">
    <h1 class="text-[23px] md:text-[40px] text-black dark:text-[#feffee] font-medium mb-2 tracking-tight md:mt-5">
      películas para ti
    </h1>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 mt-4 gap-5 md:gap-6">
    {% for block in section.blocks %}
      <div class="text-center">
        {% if block.settings.link != blank %}
          <a
            href="{{ block.settings.link }}"
            class="block group"
            rel="noopener noreferrer">
        {% endif %}
        {% if block.settings.image %}
          <div class="h-[250px] rounded-xl overflow-hidden">
            <img
              src="{{ block.settings.image | image_url: width: 1300 }}"
              alt="{{ block.settings.name | escape }}"
              style="width: 100%; height: 100%; object-fit: cover; object-position: center;"
              loading="lazy">
          </div>
        {% endif %}
        {% if block.settings.link != blank %}
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Películas",
    "settings": [],
    "blocks": [
      {
        "type": "image_link_block",
        "name": "Bloque de imagen y enlace",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Imagen"
          }, {
            "type": "url",
            "id": "link",
            "label": "Enlace"
          }, {
            "type": "text",
            "id": "name",
            "label": "Nombre"
          }
        ]
      }
    ]
  }
{% endschema %}