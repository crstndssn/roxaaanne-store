<div class="container mx-auto my-8">
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    {% for block in section.blocks %}
      <div class="text-center">
        {% if block.settings.link != blank %}
          <a
            href="{{ block.settings.link }}"
            class="block group"
            target="_blank"
            rel="noopener noreferrer">
        {% endif %}
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 600 }}"
            alt="{{ block.settings.name | escape }}"
            class="mx-auto mb-4 rounded-lg object-cover w-full h-48"
            loading="lazy">
        {% endif %}
        {% if block.settings.name %}
          <h3 class="text-lg font-semibold group-hover:underline">{{ block.settings.name }}</h3>
        {% endif %}
        {% if block.settings.link != blank %}
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Pel√≠culas",
    "settings": [],
    "blocks": [
      {
        "type": "image_link_block",
        "name": "Bloque de imagen y enlace",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Imagen"
          }, {
            "type": "url",
            "id": "link",
            "label": "Enlace"
          }, {
            "type": "text",
            "id": "name",
            "label": "Nombre"
          }
        ]
      }
    ]
  }
{% endschema %}