<div class="circuito-page bg-[#0c0c33] min-h-screen py-16 px-4 md:px-8">
  <div class="container mx-auto max-w-6xl">

    {% comment %} HEADER {% endcomment %}
    <div class="text-center mb-16">
      <h1 class="text-[#feffee] text-[80px] md:text-[120px] lg:text-[150px] font-medium tracking-[0.02em] mb-6" style="font-family: 'DM Sans', sans-serif;">
        {{ section.settings.title | default: 'CIRCUITO' }}
      </h1>

      <div class="flex gap-8 md:gap-16 items-center justify-center mb-8">
        <div class="flex flex-col gap-1" style="font-family: 'DM Sans', sans-serif;">
          <span class="text-[#feffee] text-[20px] md:text-[28px] font-medium tracking-[0.15em]">L</span>
          <span class="text-[#feffee] text-[20px] md:text-[28px] font-medium tracking-[0.15em]">E</span>
          <span class="text-[#feffee] text-[20px] md:text-[28px] font-medium tracking-[0.15em]">C</span>
          <span class="text-[#feffee] text-[20px] md:text-[28px] font-medium tracking-[0.15em]">T</span>
          <span class="text-[#feffee] text-[20px] md:text-[28px] font-medium tracking-[0.15em]">U</span>
          <span class="text-[#feffee] text-[20px] md:text-[28px] font-medium tracking-[0.15em]">R</span>
          <span class="text-[#feffee] text-[20px] md:text-[28px] font-medium tracking-[0.15em]">A</span>
          <span class="text-[#feffee] text-[20px] md:text-[28px] font-medium tracking-[0.15em]">S</span>
        </div>

        <div class="flex flex-col gap-1" style="font-family: 'DM Sans', sans-serif;">
          <span class="text-[#feffee] text-[20px] md:text-[28px] font-medium tracking-[0.15em]">P</span>
          <span class="text-[#feffee] text-[20px] md:text-[28px] font-medium tracking-[0.15em]">A</span>
          <span class="text-[#feffee] text-[20px] md:text-[28px] font-medium tracking-[0.15em]">R</span>
          <span class="text-[#feffee] text-[20px] md:text-[28px] font-medium tracking-[0.15em]">A</span>
          <span class="text-[#feffee] text-[20px] md:text-[28px] font-medium tracking-[0.15em]">L</span>
          <span class="text-[#feffee] text-[20px] md:text-[28px] font-medium tracking-[0.15em]">E</span>
          <span class="text-[#feffee] text-[20px] md:text-[28px] font-medium tracking-[0.15em]">L</span>
          <span class="text-[#feffee] text-[20px] md:text-[28px] font-medium tracking-[0.15em]">A</span>
          <span class="text-[#feffee] text-[20px] md:text-[28px] font-medium tracking-[0.15em]">S</span>
        </div>
      </div>

      {% if section.settings.description != blank %}
        <p class="text-[#feffee]/80 text-lg md:text-xl max-w-3xl mx-auto leading-relaxed" style="font-family: 'DM Sans', sans-serif;">
          {{ section.settings.description }}
        </p>
      {% endif %}
    </div>

    {% comment %} DOCUMENTS GRID {% endcomment %}
    {% if section.blocks.size > 0 %}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'document' %}
              <div class="bg-[#1a1a4d] rounded-xl border-2 border-[#feffee]/20 hover:border-[#feffee]/60 transition-all duration-300 p-6 group" {{ block.shopify_attributes }}>

                {% if block.settings.document_file != blank %}
                  <a
                    href="{{ block.settings.document_file }}"
                    download
                    class="block">
                    <div class="flex flex-col h-full">

                      {% comment %} Icon {% endcomment %}
                      <div class="mb-4">
                        <svg
                          class="w-12 h-12 text-[#feffee] group-hover:scale-110 transition-transform"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24">
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                      </div>

                      {% comment %} Content {% endcomment %}
                      <div class="flex-1">
                        {% if block.settings.document_title != blank %}
                          <h3 class="text-[#feffee] text-xl md:text-2xl font-medium mb-2" style="font-family: 'DM Sans', sans-serif;">
                            {{ block.settings.document_title }}
                          </h3>
                        {% endif %}

                        {% if block.settings.document_description != blank %}
                          <p class="text-[#feffee]/70 text-sm md:text-base mb-4" style="font-family: 'DM Sans', sans-serif;">
                            {{ block.settings.document_description }}
                          </p>
                        {% endif %}

                        {% if block.settings.document_size != blank %}
                          <p class="text-[#feffee]/50 text-xs uppercase tracking-wider" style="font-family: 'DM Sans', sans-serif;">
                            {{ block.settings.document_size }}
                          </p>
                        {% endif %}
                      </div>

                      {% comment %} Download Button {% endcomment %}
                      <div class="mt-4 pt-4 border-t border-[#feffee]/10">
                        <span class="text-[#feffee] text-sm font-medium group-hover:underline" style="font-family: 'DM Sans', sans-serif;">
                          Descargar →
                        </span>
                      </div>
                    </div>
                  </a>
                {% else %}
                  <div class="flex flex-col h-full opacity-50">
                    <div class="mb-4">
                      <svg
                        class="w-12 h-12 text-[#feffee]"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                    </div>
                    <p class="text-[#feffee]/50 text-sm" style="font-family: 'DM Sans', sans-serif;">
                      No hay documento cargado
                    </p>
                  </div>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    {% else %}
      <div class="text-center py-16">
        <p class="text-[#feffee]/50 text-lg" style="font-family: 'DM Sans', sans-serif;">
          No hay documentos disponibles en este momento
        </p>
      </div>
    {% endif %}

  </div>
</div>

<style>
  .circuito-page {
    font-family: 'DM Sans'
    , sans-serif;
  }
</style>

{% schema %}
  {
    "name": "Circuito",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Título principal",
        "default": "CIRCUITO"
      }, {
        "type": "textarea",
        "id": "description",
        "label": "Descripción",
        "default": "Explora y descarga las lecturas paralelas disponibles"
      }
    ],
    "blocks": [
      {
        "type": "document",
        "name": "Documento",
        "settings": [
          {
            "type": "text",
            "id": "document_title",
            "label": "Título del documento",
            "default": "Título del documento"
          }, {
            "type": "textarea",
            "id": "document_description",
            "label": "Descripción breve",
            "default": "Descripción del contenido del documento"
          }, {
            "type": "text",
            "id": "document_size",
            "label": "Tamaño/Info (ej: PDF • 2.5 MB)",
            "default": "PDF"
          }, {
            "type": "url",
            "id": "document_file",
            "label": "URL del archivo"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Circuito"
      }
    ]
  }
{% endschema %}